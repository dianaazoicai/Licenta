<div>
    <form action="/adauga-programare" method="POST">
        <label for="name">Nume și prenume: </label>
        <input id="name" type="name" name="nume"><br>
        <label for="CNP">CNP: </label>
        <input id="CNP" name="CNP"><br>
        <label for="adresa">Adresa: </label>
        <input id="adresa" name="adresa"><br>
        <label for="telefon">Telefon:  </label>
        <input id="telefon" name="telefon"><br>
        <label for="email">Email: </label>
        <input id="email" name="email"><br>
        <label for="specializare">Alege specializarea pentru programare: </label>
        <select list="specializari" name="specializare" id="specializare">
            <% for(let i=0;i<medici.length;i++) {%>
                <option value=<%=medici[i].id_doctor%>><%=medici[i].specializare%></option>
            <%}%>
        </select>
        <br>
        <label for="programare">Data programării: </label>
        <input type="date" id="programare" name="programare"> 
        <br><br>
        <input type="time" id="ora_programare" name="time">
        <input type="submit" value="Confirmare programare">
    </form>
</div>